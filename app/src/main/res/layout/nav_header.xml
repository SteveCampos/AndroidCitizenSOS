<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="192dp"
android:weightSum="1"
android:background="@drawable/portada3">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="top"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mun. Huachipa"
        android:id="@+id/municipalidadNombre"
        android:layout_weight="1"
        android:textStyle="italic"
        android:textSize="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="994387165"
        android:id="@+id/nav_number"
        android:background="@color/azul"
        android:textColor="@color/Blanco"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />

</LinearLayout>

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Steve Campos Vega"
    android:id="@+id/nav_username"
    android:textSize="16dp"
    android:textColor="@color/Dark1"
    android:textStyle="bold"
    android:layout_weight="1"
    android:layout_margin="8dp" />

</LinearLayout>